// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")

}

model User {
  id                   String                @id @default(uuid())
  username             String
  password             String
  email                String?               @unique
  storageItemUserRoles StorageItemUserRole[]
}

model StorageItem {
  id           String                  @id @default(uuid())
  parent       StorageItem?            @relation("StorageItemParent", fields: [parentId], references: [id])
  parentId     String?
  children     StorageItem[]           @relation("StorageItemParent")
  name         String
  mimeType     String
  size         Int
  createdAt    DateTime                @default(now())
  updatedAt    DateTime?               @updatedAt
  type         StorageItemType
  storagePath  String?
  hash         String
  uploadStatus StorageItemUploadStatus
  chunks       UploadChunk[]
  roles        StorageItemUserRole[]
}

model UploadChunk {
  id            Int         @id @default(autoincrement())
  storageItem   StorageItem @relation(fields: [storageItemId], references: [id])
  storageItemId String
  chunkNumber   Int
  chunkSize     Int
  createdAt     DateTime    @default(now())
}

model Role {
  id                   Int                   @id @default(autoincrement())
  name                 String
  storageItemUserRoles StorageItemUserRole[]
}

model Permission {
  id   Int    @id @default(autoincrement())
  name String
}

model StorageItemUserRole {
  id            Int         @id @default(autoincrement())
  storageItem   StorageItem @relation(fields: [storageItemId], references: [id])
  storageItemId String
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  role          Role        @relation(fields: [roleId], references: [id])
  roleId        Int
}

enum StorageItemType {
  FILE
  FOLDER
}

enum StorageItemUploadStatus {
  FINISHED
  LOADING
  INITIALIZED
}
